<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    </div>
 <div class="card col-6 offset-3 show-card">
       <b> <h3>Listing Details</h3> </b>
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b> <br>
                <%= listing.description %> <br>
                &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : 'N/A' %> /night <br>
                <%= listing.location %> <br>
                <%= listing.country %>
            </p>
          </div>
    </div>
<br>

    <div class="btns">
        <a href="/listing/<%= listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>

        <form action="/listing/<%= listing._id %>?_method=DELETE" method="post">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
    </div>
    
</div>
</body>